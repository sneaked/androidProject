<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <com.ngot.windspin.GView 
        android:id="@+id/GView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    
    <TextView 
        android:id="@+id/text_level"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/layout_level"
        android:gravity="right|center_vertical"
        android:paddingRight="30dp"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <TextView 
        android:id="@+id/text_wave"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/layout_wave"
        android:gravity="left|center_vertical"
        android:paddingLeft="30dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        />
    
    <TextView 
        android:id="@+id/text_stats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/layout_statspoint"
        android:layout_below="@id/text_level"
        android:text="00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    
</RelativeLayout>
