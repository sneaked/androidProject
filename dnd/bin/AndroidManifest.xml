<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ngot.windslash"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
	<uses-permission
	    android:name="android.permission.VIBRATE"
	     />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/wind_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
        	
            android:name="com.ngot.windslash.IntroActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ngot.windslash.StartActivity">
        </activity>
        <activity
            android:name="com.ngot.windslash.SelectActivity">
        </activity>
        
        <activity
            android:name="com.ngot.windslash.MainActivity">
        </activity>
        <activity
            android:name="com.ngot.windslash.GameoverActivity">
        </activity>
    </application>

</manifest>
